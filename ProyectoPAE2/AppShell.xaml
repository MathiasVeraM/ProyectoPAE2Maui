<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ProyectoPAE2.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ProyectoPAE2"
    Title="ProyectoPAE2">

    <FlyoutItem Title="Home" FlyoutIcon="dotnet_bot.png">
        <ShellContent   Title="Home"
                        ContentTemplate="{DataTemplate local:MainPage}"
                        Route="MainPage" />
    </FlyoutItem>
    
    <FlyoutItem Title="Nueva Publicacion" FlyoutIcon="dotnet_bot.png">
        <ShellContent   Title="Nueva Publicacion"
                        ContentTemplate="{DataTemplate local:PantallaPublicaciones}"
                        Route="MainPage" />
    </FlyoutItem>

    <FlyoutItem Title="Cerrar Sesion" FlyoutIcon="dotnet_bot.png">
        <ShellContent   Title="Cerrar Sesion"
                        ContentTemplate="{DataTemplate local:PantallaLogin}"
                        Route="MainPage" /> 
    </FlyoutItem>

</Shell>
